{
    "compilerOptions": {
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": true,
      "outDir": "./lib",
      "module": "ESNext",
      "jsx": "react",
      "target": "ES6",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib", "dist", "src/pages"]
  }
  